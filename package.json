{
    "name": "sonarlint-vscode",
    "displayName": "SonarLint",
    "description": "SonarLint for Visual Studio Code",
    "version": "1.0.0-alpha.2",
    "icon": "icon.png",
    "publisher": "SonarSource",
    "repository": {
        "type": "git",
        "url": "https://github.com/SonarSource/sonarlint-vscode.git"
    },
    "bugs": {
		"url": "https://jira.sonarsource.com/browse/SLVSCODE"
	},
    "license": "LGPL-3.0",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Languages",
        "Linters"
    ],
    "keywords": [
        "SonarLint"
    ],
    "activationEvents": [
        "onLanguage:javascript",
		"onLanguage:typescriptreact"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "SonarLint",
            "properties": {
                "sonarlint.testFilePattern": {
                    "type": ["string", "null"],
                    "default": ".*[tT]est.*",
                    "description": "Files whose name match this regexp pattern are considered as test files"
                }
            }
        }
    },
    "main": "./out/src/extension",
    "files": [
        "lib/sonarlint-server.jar"
    ],
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "portfinder": "^1.0.13",
        "vscode-languageclient": "3.2.2",
        "open": "0.0.5"
    },
    "devDependencies": {
        "typescript": "^2.2.1",
        "vscode": "^1.1.0",
        "mocha": "^2.4.5",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}